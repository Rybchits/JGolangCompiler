{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Build and debug JGolangCompiler",
            "type": "cppdbg",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/parser.o",   
            "args": ["./tests/arrays/matrix_init.go"],
            "stopAtEntry": false,
            "environment": [],
            "externalConsole": false,
            "linux": {
                "name": "Build and debug JGolangCompiler",
                "type": "cppdbg",
                "request": "launch",
                "cwd": "${workspaceFolder}",
                "program": "${workspaceFolder}/parser.o",
                "MIMode": "gdb",
                "miDebuggerPath": "/usr/bin/gdb"
            },
            "osx": {
                "name": "Build and debug JGolangCompiler",
                "type": "cppdbg",
                "request": "launch",
                "cwd": "${workspaceFolder}",
                "program": "${workspaceFolder}/parser.o",
                "MIMode": "lldb",
                // TODO написать путь для линукса, если нужно
                // "miDebuggerPath": ""
            },
            "setupCommands": [
              {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
              }
            ],
            "preLaunchTask": "C/C++: build all"
        }
    ]
  }
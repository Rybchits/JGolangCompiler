{
    "tasks": [
        {
            "label": "[osx] C/C++: build all",
            "dependsOn": [
                "[osx] clean lldb cache",
                "[osx] C/C++: build parser",
                "[osx] C/C++: build lexer",
                "[osx] C/C++: build semantic"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },

        {
            "label": "[osx] C/C++: build lexer",
            "type": "shell",
            "command": "flex",
            "args": [
                "--outfile=lexer/lex.yy.cc",
                "lexer/lexer.lpp",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },

        {
            "label": "[osx] C/C++: build parser",
            "type": "shell",
            "command": "bison",
            "args": [
                "--defines=parser/parser.tab.h",
                "--output=parser/parser.tab.cpp",
                "parser/parser.y",
                "-t",
                "--verbose",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },

        {
            "label": "[osx] C/C++: build semantic",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-g",
                "main.cpp",
                "ast.cpp",
                "parser/*.cpp",
                "semantic/*.cpp",
                "semantic/visitors/*.cpp",
                "utils/*.cpp",
                "codegen/*.cpp",
                "-o",
                "compiler"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },

        {
            "label": "[linux] C/C++: build all",
            "dependsOn": [
                "[linux] C/C++: build parser",
                "[linux] C/C++: build lexer",
                "[linux] C/C++: build semantic"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },

        {
            "label": "[linux] C/C++: build lexer",
            "type": "cppbuild",
            "command": "/usr/bin/flex",
            "args": [
                "--outfile=lexer/lex.yy.cc",
                "lexer/lexer.lpp",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },

        {
            "label": "[linux] C/C++: build parser",
            "type": "cppbuild",
            "command": "/usr/bin/bison",
            "args": [
                "--defines=parser/parser.tab.h",
                "--output=parser/parser.tab.cpp",
                "parser/parser.y",
                "-t",
                "--verbose",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },

        {
            "label": "[linux] C/C++: build semantic",
            "type": "cppbuild",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++17",
                "-g",
                "main.cpp",
                "ast.cpp",
                "parser/*.cpp",
                "semantic/*.cpp",
                "semantic/visitors/*.cpp",
                "utils/*.cpp",
                "codegen/*.cpp",
                "-o",
                "compiler"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },

        {
            "label": "[osx] clean lldb cache",
            "type": "shell",
            "command": "rm",
            "args": ["-rf", "compiler.dSYM"]
        }
    ],
    "version": "2.0.0"
}